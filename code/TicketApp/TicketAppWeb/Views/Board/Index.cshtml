<script>
	function moveStageLeft(stageId) {
		$.ajax({
			url: '/Board/MoveStage',
			type: 'POST',
			data: { stageId: stageId, direction: 'left' },
			success: function (response) {
				if (response.success) {
					location.reload();
				}
			}
		});
	}

	function moveStageRight(stageId) {
		$.ajax({
			url: '/Board/MoveStage',
			type: 'POST',
			data: { stageId: stageId, direction: 'right' },
			success: function (response) {
				if (response.success) {
					location.reload();
				}
			}
		});
	}

</script>
