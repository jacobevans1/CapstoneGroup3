@model TicketAppWeb.Models.ViewModels.BoardViewModel
@{
    ViewBag.Title = Model.Project.ProjectName;
}

<div class="container py-5">
    <div class="row g-4 d-flex flex-nowrap">
        @foreach (var status in Model.Statuses)
        {
            <div class="col-12 col-md-6 col-lg-4 column">
                <div class="card shadow-lg border-light rounded">
                    <div class="card-header bg-primary text-white d-flex justify-content-between">
                        <h5 class="mb-0">@status.Name</h5>
	                    <div class="dropdown">
		                    <button class="btn btn-link p-0" type="button" id="ellipsisButton-@status.Id" data-bs-toggle="dropdown" aria-expanded="false" style="background: none; border: none; color: white; padding: 0;">
			                    <i class="fas fa-ellipsis-h" style="font-size: 16px;"></i>
		                    </button>
		                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
			                    <li>
				                    <a class="dropdown-item d-flex align-items-center" href="#" data-bs-toggle="modal" data-bs-target="#assignGroupModal" onclick="setAssignGroupData('@status.Id')">
					                    <i class="fas fa-users me-2"></i> Assign Group
				                    </a>
			                    </li>
			                    <li>
				                    <a class="dropdown-item d-flex align-items-center" href="#" data-bs-toggle="modal" data-bs-target="#renameColumnModal" onclick="setRenameColumnData('@status.Id', '@status.Name')">
					                    <i class="fas fa-edit me-2"></i> Rename Column
				                    </a>
			                    </li>
			                    <li>
				                    <a class="dropdown-item d-flex align-items-center text-danger" href="#" onclick="removeColumn('@status.Id')">
					                    <i class="fas fa-trash-alt me-2"></i> Remove Column
				                    </a>
			                    </li>
		                    </ul>
	                    </div>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @* Task list here *@
                        </ul>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-success d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#addTaskModal" onclick="setAddTaskData('@status.Id')">
                            <i class="fas fa-plus me-2"></i> Add Item
                        </button>
                    </div>
                </div>
            </div>
        }

        <div class="col-auto">
            <div class="d-flex align-items-center justify-content-center h-100">
                <button class="btn btn-outline-primary d-flex align-items-center px-4 py-3" data-bs-toggle="modal" data-bs-target="#addColumnModal">
                    <i class="fas fa-plus me-2"></i> Add Column
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Add Column Modal -->
<div class="modal fade" id="addColumnModal" tabindex="-1" aria-labelledby="addColumnModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="addColumnModalLabel">Add New Column</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form asp-action="AddColumn" asp-controller="Board" method="post">
				<input type="hidden" asp-for="Board.Id"/>
				<input type="hidden" asp-for="Project.Id" />
				<div class="modal-body">
					<div class="mb-3">
						<label for="newColumnName" class="form-label">Column Name</label>
						<input type="text" class="form-control" id="newColumnName" asp-for="NewStatusName" placeholder="Enter column name" required>
					</div>
					<div class="mb-3">
						<label for="initialGroupSelect" class="form-label">Select Group</label>
						<select class="form-select" id="initialGroupSelect" asp-for="SelectedGroupId">
							@foreach (var group in Model.Project.Groups)
							{
								<option value="@group.Id">@group.GroupName</option>
							}
						</select>
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-primary">Add Column</button>
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				</div>
			</form>
		</div>
	</div>
</div>



<!-- Rename Column Modal -->
<div class="modal fade" id="renameColumnModal" tabindex="-1" aria-labelledby="renameColumnModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="renameColumnModalLabel">Rename Column</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form asp-action="RenameColumn" asp-controller="Board" method="post">
				<input type="hidden" asp-for="Board.Id" />
				<input type="hidden" asp-for="Project.Id" />
				<div class="modal-body">
					<input type="hidden" id="renameColumnId" asp-for="SelectedStatusId">
					<div class="mb-3">
						<label for="renameColumnName" class="form-label">New Column Name</label>
						<input type="text" class="form-control" id="renameColumnName" asp-for="NewStatusName" placeholder="Enter new name" required>
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-primary">Rename</button>
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				</div>
			</form>
		</div>
	</div>
</div>



<!-- Assign Group Modal -->
<div class="modal fade" id="assignGroupModal" tabindex="-1" aria-labelledby="assignGroupModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="assignGroupModalLabel">Assign Group to Column</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form asp-action="AssignGroupToStatus" asp-controller="Board" method="post">
				<input type="hidden" asp-for="Board.Id"/>
				<input type="hidden" asp-for="Project.Id" />
				<div class="modal-body">
					<input type="hidden" id="assignGroupStatusId" asp-for="SelectedStatusId">
					<div class="mb-3">
						<label for="newGroupSelect" class="form-label">Select Group</label>
						<select class="form-select" id="newGroupSelect" asp-for="SelectedGroupId">
							@foreach (var group in Model.Project.Groups)
							{
								<option value="@group.Id">@group.GroupName</option>
							}
						</select>
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-primary">Assign</button>
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				</div>
			</form>
		</div>
	</div>
</div>



